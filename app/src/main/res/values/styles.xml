<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/grey50</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="background">@color/grey50</item>
    </style>

    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey900</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="ContentTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey600</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ContentDynamicTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey600</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
